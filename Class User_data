class User_data():
    import random
    def __init__(self):
        self.autosave = True

    def new_user(self,new_user_data):
        new_user_data = input('Please Enter Your User_name:')
        f = open('database.txt', 'a+')
        for i in range(1):
            f.write(new_user_data)
            f.write('\n')
            f.close
            break

    def old_user(self,old_user_data):
        f = open('database.txt', 'r')
        file_contents = f.read()
        print('Here is your UserDatas \n\n%s' %file_contents)

        old_user_data = input('Which User do you want to play with?')
        choose_user = old_user_data
        with open('database.txt') as f:
            for line in f:
                if old_user_data in line:
                    print('You are playing as', choose_user)
                    break
                else:
                    print('No data is found')
                    break

